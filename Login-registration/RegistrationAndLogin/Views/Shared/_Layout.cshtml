<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Andersen Software Design</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Freelance ToDo Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @if (@User.Identity.IsAuthenticated && ViewBag.Title != "FrontPage")
                {
                    <span class="nav navbar-nav navbar-right">@Html.Partial("MainMenu")</span>
                    @*if (@ToDoWeb.Core.CurrentContext.User().account_type == (Int32)ToDoWeb.Core.CurrentContext.AuthorizeFlags.Administrator)
            {
                @Html.ActionLink("Admin", "Index", "Administrator", new { area = "" }, new { @class = "navbar-brand" })
            }*@
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    @if (@User.Identity.IsAuthenticated)
                    {
                        if (ViewBag.Title != "FrontPage") //ToDo remove on deployment
                        {
                        <li><a href="@Url.Action("Logout", "User")">Logout</a></li>
                        }
                    }
                    else
                    {
                        if (ViewBag.Title != "FrontPage" && ViewBag.Title == "Login") //ToDo remove on deployment
                        {
                            <li><a href="@Url.Action("Registration", "User")">Register</a></li>
                        }
                        if (ViewBag.Title != "FrontPage" && ViewBag.Title == "Registration") //ToDo remove on deployment
                        {
                            <li><a href="@Url.Action("Login", "User")">Login</a></li>
                        }

                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
       @if (ViewBag.Title == "FrontPage")//ToDo remove this on deployment
       {

       }
       else
       {
        <footer>
            <p>&copy; @DateTime.Now.Year - Andersen Software Design</p>
        </footer>
       }
    </div>

